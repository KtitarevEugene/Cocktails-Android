<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/category_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/drinks_list_item_margin_horizontal"
        android:layout_marginEnd="@dimen/drinks_list_item_margin_horizontal"
        android:layout_marginTop="@dimen/drinks_list_header_margin_top"
        android:layout_marginBottom="@dimen/drinks_list_header_margin_bottom"
        android:theme="@style/list_header_text_style" />

</androidx.constraintlayout.widget.ConstraintLayout>